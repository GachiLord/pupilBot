{
    "manifest_version": 3,
    "name": "PupilBot",
    "version": "0.7.2",
  
    "description": "Сидит на дистанте за меня",
    "icons": {
      "48": "./dist/icon.png"
    },
    "action": {
      "default_popup": "./dist/popup.html"
    },
    "permissions": [
      "tabs",
      "scripting",
      "storage",
      "activeTab"
    ],
    "host_permissions":[
      "https://web.skype.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://web.skype.com/*"],
        "css": ["dist/bootstrap.min.css"],
        "js": ["dist/process.js"]
      }
    ]
  }
